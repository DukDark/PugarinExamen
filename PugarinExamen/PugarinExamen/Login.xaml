<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PugarinExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" />
            <Frame BackgroundColor="#2196F3" Padding="14" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="14"/>

            </Frame>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>
            <Entry x:Name="txtClave" Placeholder="Ingrese su clave"/>

          
        

        <Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked"/>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>